<h2>Item</h2>
<div class="uk-width-1-3">
    <div class="uk-panel uk-panel-box">
        <div class="uk-panel-badge uk-badge">...</div>
        <h3 class="uk-panel-title">{{product.name}}</h3>
        <div>
            {{{product.description}}}
        </div>
        <div>
            <h5>Attributes</h5>
            {{#each product.product2Attributes as |product2Attribute|}}
                <div><b>{{product2Attribute.attribute.name}}:</b> {{product2Attribute.attributeValue.value}}</div>
            {{/each}}
        </div>
        <div>
            {{activeProductSet.name}}
            <h5>Options</h5>
            {{#each product.productSets as |productSet|}}
                <p>{{productSet.name}}</p>
                {{#each productSet.product2Options as |product2Option|}}
                    <div><b>Price: </b>{{product2Option.price}}</div>
                    <div><b>{{product2Option.option.name}}: </b>{{product2Option.optionValue.value}}</div>
                {{/each}}
            {{/each}}
        </div>
    </div>
</div>