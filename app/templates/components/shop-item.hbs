<div class="uk-width-1-2 uk-margin-top">
    <div class="uk-panel uk-panel-box">
        <h3 class="uk-panel-title">{{product.name}}</h3>
        <div>
            {{{product.description}}}
        </div>
        <div>
            <h5>Attributes</h5>
            {{#each product.product2Attributes as |product2Attribute|}}
                <div><b>{{product2Attribute.attribute.name}}:</b> {{product2Attribute.attributeValue.value}}</div>
            {{/each}}
        </div>
        {{#if productOptions}}
            <div>
                <h5>Available Options</h5>
                {{#each-in productOptions as |key option|}}
                    <div>
                        <h5>{{option.name}}</h5>
                        <div>
                            {{!log checkedOptions (obj-prop checkedOptions option.id 'optionValue')}}
                            {{#each (obj-prop productValues key) as |optionValue|}}
                                <div {{action 'checkOption'}} data-option-id="{{option.id}}" data-value-id="{{optionValue.id}}"
                                    class="uk-width-1-10 uk-badge uk-margin-right
                                    {{if (if-condition optionValue.id "==" (obj-prop checkedOptions option.id 'valueId')) "uk-badge-success"}}
                                    {{!if (if-condition optionValue.id "==" (obj-prop checkedOptions option.id)) "uk-badge-success"}}
                                    {{unless (if-in optionValue.id (obj-prop properOptions option.id)) "uk-badge-warning"}}
                                ">
                                    {{optionValue.value}}
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/each-in}}
            </div>
        {{/if}}
        <button disabled={{isCancelled}} class="uk-button-primary uk-margin-top">Add To Cart</button>
    </div>
</div>